<%= form_for @group ,url:groups_path do |f| %>
<div class="space-y-2 mx-9 flex flex-col bg-[#fff] px-11 py-6 rounded-lg">
  <div class="mt-8 content-center flex flex-col space-y-2">
    <%= f.label :name ,class:"text-primary"%>
    <%= f.text_field :name,class:"text-primary w-[75%]" %>
  </div>

  <div class="mt-8 content-center flex flex-col space-y-2">
    <%= f.label :icon,class:"text-primary"%>
    <%= f.file_field :icon,class:"text-primary"%>
  </div>

     <%= f.submit "Create Category", class: " w-fit flex bg-secondary text-[#fff] p-2 tracking-wide uppercase
                                font-semibold  focus:outline-none focus:shadow-outline hover:bg-indigo-600 shadow-lg cursor-pointer transition ease-in duration-300"%>

</div>
<% end %>